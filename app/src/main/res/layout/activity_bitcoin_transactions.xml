<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bitcointransactions.BitcoinTransactionsActivity">

    <TextView
        android:id="@+id/activity_bitcoin_transactions_header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_bitcoin_transactions_recycler_view"
        android:text="@string/activity_bitcoin_transaction_header_text"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_bitcoin_transactions_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/activity_bitcoin_transactions_header_text_view"
        />
</android.support.constraint.ConstraintLayout>